#!/bin/bash


set -e  

echo "Checking AUR helper..."
if ! command -v yay &> /dev/null; then
    echo "Yay not found. Installing..."
    sudo pacman -S --needed base-devel git
    git clone https://aur.archlinux.org/yay.git /tmp/yay
    cd /tmp/yay
    makepkg -si 
    cd -
    rm -rf /tmp/yay
fi

