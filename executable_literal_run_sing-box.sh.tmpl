#!/bin/bash
{{ $s := output "sops" "-d" (joinPath .chezmoi.sourceDir "secrets.enc.yaml") | fromYaml -}}
{{ $url := index $s "sing-box" "config_url" .chezmoi.hostname -}}

CONFIG="$HOME/{{ .chezmoi.hostname }}_sing-box/config.json"
TEMP=$(mktemp)

# -f = fail on HTTP errors (4xx, 5xx)
# -s = silent, -S = show errors
if curl -fsSL "{{ $url }}" -o "$TEMP"; then
    mv "$TEMP" "$CONFIG"
    echo "Config updated"
else
    rm -f "$TEMP"
    echo "Load failed, using old config"
fi

trap 'kill $(jobs -p) 2>/dev/null' EXIT SIGHUP SIGINT SIGTERM

"$HOME/sing-box/sing-box" run -c "$CONFIG" &
wait
