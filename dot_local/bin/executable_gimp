#!/usr/bin/env bash
set -euo pipefail
. "${HOME}/.local/lib/bwrap-common.sh"

FILE_BINDS=(); ARGS=()
bwrap_resolve_files FILE_BINDS ARGS --bind "$@"

A=()
bwrap_gui_setup A
bwrap_bind_dir A \
    "${HOME}/.config/GIMP" \
    "${HOME}/.local/share/GIMP" \
    "${HOME}/.cache/GIMP" \
    "${HOME}/Pictures" \
    "${HOME}/Downloads"
A+=("${FILE_BINDS[@]}")
bwrap_gui_finish A

exec bwrap "${A[@]}" -- /usr/bin/gimp "${ARGS[@]}"
