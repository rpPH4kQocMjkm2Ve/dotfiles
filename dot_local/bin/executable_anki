#!/usr/bin/env bash
# Sandboxed Anki via bubblewrap
set -euo pipefail
. "${HOME}/.local/lib/bwrap-common.sh"

mkdir -p "${HOME}/.local/share/Anki2" \
         "${HOME}/Downloads/anki"

FILE_BINDS=()
ARGS=()
bwrap_resolve_files FILE_BINDS ARGS --ro-bind "$@"

A=()
bwrap_base A
bwrap_lib64 A
bwrap_resolv A
bwrap_gpu A
bwrap_dbus_system A

A+=(--perms 0755 --dir /run/user
    --perms 0700 --dir "${XDG_RUNTIME_DIR}")

bwrap_home_tmpfs A

A+=(--bind "${HOME}/.local/share/Anki2" "${HOME}/.local/share/Anki2"
    --bind "${HOME}/Downloads/anki"     "${HOME}/Downloads/anki"
    "${FILE_BINDS[@]}")

bwrap_themes A
bwrap_wayland A
bwrap_audio A
bwrap_dbus_session A
bwrap_env_base A
A+=(--setenv QT_QPA_PLATFORM wayland
    --setenv QT_QPA_PLATFORMTHEME qt6ct
    --setenv QTWEBENGINE_DISABLE_SANDBOX 1)
bwrap_sandbox A yes

exec bwrap "${A[@]}" -- /usr/bin/anki "${ARGS[@]}"
