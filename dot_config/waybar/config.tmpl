        "exec": "sensors | awk '/Tctl/ {tctl=$2} /Tccd1/ {tccd1=$2} END {print tctl \"/\" tccd1}'",
    	{{- else if eq .chezmoi.hostname "laptop-1" }}
        "exec": "sensors | awk '/CPU/ {cpu=$2} END {print cpu}'",
