set previewer ~/.config/lf/previewer_sandbox
set cleaner ~/.config/lf/cleaner

# Play with mpv
map m $mpv "$f" #>/dev/null 2>&1 &
# Edit with nvim
map n $nvim "$f"

cmd ffmpeg_jp %sh ~/.config/lf/ffmpeg_jp "$f"
map o ffmpeg_jp

cmd rename_subs %sh ~/.config/lf/rename_subs && lf -remote "send $id reload"

map <c-b> rename_subs
